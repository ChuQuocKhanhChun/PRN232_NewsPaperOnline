@model string

@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<h2>Truy cập bị từ chối</h2>

<div class="alert alert-danger">
    <p>Bạn không có quyền truy cập vào trang này.</p>
    @if (!string.IsNullOrEmpty(Model))
    {
        <p>Thông báo: @Model</p>
    }
</div>

<div>
    <a asp-controller="Auth2" asp-action="Login" class="btn btn-primary">Đăng nhập</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Quay về trang chủ</a>
</div>