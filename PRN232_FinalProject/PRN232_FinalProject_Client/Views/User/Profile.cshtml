@model PRN232_FinalProject_Client.DTO.UserProfileDto

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<h2>Thông tin cá nhân</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (Model == null)
{
    <div class="alert alert-danger">
        <p>Không thể tải thông tin cá nhân. Vui lòng thử lại sau.</p>
    </div>
}
else
{
    <form asp-action="UpdateProfile" asp-controller="User" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 text-center">
                <img id="previewImage" src="@(string.IsNullOrEmpty(Model.Image) ? "/images/0d64989794b1a4c9d89bff571d3d5842.jpg" : Model.Image)" alt="Ảnh đại diện" class="img-fluid rounded-circle mb-3" style="max-width: 200px;" />

                <input type="file" name="ImageFile" class="form-control-file" />
            </div>

            <div class="col-md-8">
                <div class="form-group">
                    <label>Họ và tên</label>
                    <input asp-for="FullName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>

                <button type="submit" class="btn btn-success">Lưu thay đổi</button>
            </div>
        </div>
    </form>




}

<a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Quay lại</a>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />




