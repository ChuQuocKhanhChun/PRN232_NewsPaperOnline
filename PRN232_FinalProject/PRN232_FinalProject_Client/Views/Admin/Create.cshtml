@model PRN232_FinalProject_Client.Models.CreateAccountViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Tạo Tài khoản Mới";
}

<h1>Tạo Tài khoản Mới</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <!-- Bỏ span asp-validation-for="FullName" để loại bỏ validation hiển thị -->
                <!-- <span asp-validation-for="FullName" class="text-danger"></span> -->
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label> <!-- <-- THÊM TRƯỜNG USERNAME -->
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span> <!-- <-- THÊM VALIDATION CHO USERNAME -->
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control" asp-items="@(new SelectList(Model.AvailableRoles))">
                    <option value="">-- Chọn vai trò --</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}